<% if @mobile %>
  <video width="100%" height="300" controls autoplay="autoplay">
    <source src="<%= @media.file_url %>" type="application/x-mpegURL">
  </video>
<% else %>
  <div id='video-player'></div>
  <script type='text/javascript'>
    jwplayer('video-player').setup({
        playlist: [{
        image: '<%= @media.thumbnail_url %>',
        title: '<%= @media.title %>',
        sources: [
           {
                  file: "<%= @media.file_url %>"
            }
           ]
        }],
        image: '<%= @media.thumbnail_url %>',
        title: '<%= @media.title %>',
        width: '100%',
        aspectratio: '16:9',
        ga: '{}',
        sharing: '{}',
        androidhls: true,
        autostart: true,
        repeat: true
    });
  </script>
<% end %>