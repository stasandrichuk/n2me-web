<div class="uk-panel media show-book">
  <div class="uk-grid">
    <div class="uk-width-1-3">
      <img src="<%= @media.thumbnail_url %>" alt="">
      <div class="clearfix"></div>
      <br><br>
      
    </div>
    <div class="uk-width-2-3">
      <h2><%= @media.title %></h2>
      
      <h3><strong>Author:</strong><br><%= @media.author %></h3>
      <a class="download" href="<%= @media.file_url %>">
        <img src="<%= asset_path('download-pdf.png') %>">
      </a>
      <div class="uk-panel">
        <%= @media.description.html_safe %>
      </div>
    </div>
  </div>
</div>
