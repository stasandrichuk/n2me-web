<!--Header Start-->
<header class="cp_header">
  <!--Navigation Start-->
  <div class="cp-navigation-row">
    <!--Side Bar Menu Start-->
    <div id="cp_side-menu"> <span id="cp-close-btn"><a href="#"><i class="fa fa-times"></i></a></span>
      <div class="cp_side-navigation">
        <ul class="cp-social-links">

          <li><a href="/profile#favorites"><i class="fa fa-heart-o"></i></a></li>
          <li><a href="/profile#recently-watched"><i class="fa fa-film"></i></a></li>
          <li><a href="/products"><i class="fa fa-credit-card"></i></a></li>
        </ul>
        <div class="cp-right-outer">
          <a class="btn btn-danger" href="<%= new_user_session_path %>">Login <i class="fa fa-user"></i></a>
          <a class="btn btn-danger" href="<%= new_user_registration_path%>">Register<i class="fa fa-file-text-o"></i></a>
          <ul class="navbar-nav">
            <li class="dropdown"><a href="/categories" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Browse Media<span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="/categories">Home</a></li>
                <li><a href="/categories/1422405890">Live TV</a></li>
                <li><a href="/categories/1423429519">Movies</a></li>
                <li><a href="/categories/1423429520">Events</a></li>
                <li><a href="/categories/1422405926">Games</a></li>
                <li><a href="/music">Music</a></li>
                <li><a href="<%= ebooks_path %>">E-Books</a></li>
                <li><a href="/categories/1422405886">International</a></li>
              </ul>
            </li>

            <li><a href="/mechat/index">MeChat Video Chat & Broadcasting</a> </li>
            <li><a href="#">Live TV Guide</a> </li>
            <li><a href="http://imdb.n2me.tv">TV & Movie Reviews and More</a></li>
          </ul>
          <%= form_tag search_path, :method => :get, :class => 'cp-search-form-outer' do %>
            <div class="cp-search-form-outer">
              <input type="text" name="query" placeholder="Search..." required>
              <button class="btn-submit" type="submit"><i class="fa fa-search"></i></button>
            </div>
            <label>... or refine by category.</label>
          <% end %>
          <% if current_user %>
            <div class="cp-upload-outer"> <a href="/profile" class="file-btn">My Account</a>
              <ul class="cp-listed">
                   <li class="login-btn"><i class="fa fa-sign-out"></i><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
              </ul>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <!--Side Bar Menu End-->
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-9 col-sm-8 col-xs-12">
          <!--Sidebar Menu Button -->
          <div id="cp_side-menu-btn" class="cp_side-menu"> <a href="javascript:void(0)" class=""><i class="fa fa-bars"></i></a> </div>
          <!--Sidebar Menu Button End-->

          <!--Logo Start-->
          <strong class="cp-logo"> <a href="/"><img src="<%= asset_path('new_layout/cp-logo1.png') %>" alt=""></a> </strong>
          <!--Logo End-->
          <!--Nav Holder Start-->
          <div class="cp-nav-holder">
			<div class="cp-megamenu">
              <div class="cp-mega-menu">
                <label for="mobile-button"> <img src="<%= asset_path('new_layout/menu-bar.png') %>" alt=""> </label>
                <!-- mobile click button to show menu -->
                <input id="mobile-button" type="checkbox">
                <ul class="main-menu">
                    <li>
                        <a class="page-scroll" href="#content">Streaming Content</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#pricing">Pricing</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#portfolio">Live Preview</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#contact">Contact</a>
                    </li>
                    <li class="login">
                        <a class="page-scroll" href="<%= new_user_session_path %>">
                          Login <i class="fa fa-user"></i>
            			</a>
                    </li>
                    <li class="login f-r">
                        <a class="page-scroll" href="<%= new_user_registration_path %>">Register <i class="fa fa-file-text-o"></i>
						</a>
                    </li>
                </ul>
               </div>
             </div>
          </div>
          <!--Nav Holder End-->
        </div>
        <div class="col-md-3 col-sm-4 col-xs-12">
          <!--Right Holder Start-->
          <div class="cp-right-holder"> 
          <%= form_tag("/schedule", method: "post", class: "get-location") do %>
            <input type="hidden" name="utc_offset" id="utc_offset" />
            <input type="hidden" name="now" id="now"></input>
            
            <%= link_to "Live TV Guide", 'schedule_path', class: 'file-btn' %>
          <% end %>
            <ul class="cp-social-links">

              <li><a href="/profile#favorites"><i class="fa fa-heart-o"></i></a></li>
              <li><a href="/profile#recently-watched"><i class="fa fa-film"></i></a></li>
              <li><a href="/products"><i class="fa fa-credit-card"></i></a></li>
              <li class="cp-search-holder"><i class="fa fa-search"></i>
                <%= form_tag search_path, :method => :get, :class => 'cp-search-form-outer' do %>
                  <input type="text" placeholder="Search..." name="query" required>
                  <button class="btn-submit" type="submit"><i class="fa fa-search"></i></button>
                <% end %>
              </li>
            </ul>
          </div>
          <!--Right Holder End-->
        </div>
      </div>
    </div>
  </div>
  <!--Navigation End-->
</header>
<!--Header End-->
