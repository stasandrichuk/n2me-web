      .uk-dropdown.uk-dropdown-width-2
        .uk-grid.uk-dropdown-grid
          - @root_categories.in_groups(2).each do |group|
            .uk-width-1-2
              - group.compact.each do |c|
                  .uk-panel
                    a href=category_path(c.number)
