  .uk-navbar-flip
    ul.uk-navbar-nav.user_actions
      li
        a#full_screen_toggle.user_action_icon.uk-visible-large[href="#"]
          i.material-icons.md-24.md-light
            | Óóê
      -if signed_in?
        li[data-uk-dropdown="{mode:'click',pos:'bottom-right'}"]
          a.user_action_image[href="#"]
            img.md-user-image[src=current_user.avatar alt=""]
          .uk-dropdown.uk-dropdown-small
            ul.uk-nav.js-uk-prevent
              li
                = link_to 'My profile', profile_path
              li
                = link_to 'My Subscription', purchases_path
              li
                = link_to 'Sign out', destroy_user_session_path, method: :delete
nav.search-bar
  form.uk-form action=search_path
    fieldset
      select.uk-margin-small-top name="category"
        = options_for_select([['All Content', '']].concat(@search_categories.map { |c| [c.title, c.number] }), params[:category])
      input.uk-margin-small-top type="text" placeholer="Search..." name="query" value=params[:query]
  


