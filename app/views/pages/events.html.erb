<!-- Portfolio -->
<div>
    <div class="container">
        <div class="row" style="margin-top:-25vh">   
            <div class="app-gallery cbp" id="js-grid-slider"> 
              <% @events.each do |event| %>
                <% image_url = (event.thumbnail_url.present? ? event.thumbnail_url : asset_path('movie-placeholder.jpg') ) %>
                <div class="cbp-item">
                    <a href="<%= media_path(event.number) %>" class=" cbp-caption">
                        <div class="cbp-caption-defaultWrap">
                          <img alt="" src="<%= image_url %>">
                        </div>
                        <div class="cbp-caption-activeWrap">
                            <div class="cbp-l-caption-alignCenter">
                                <div class="cbp-l-caption-body">
                                    <div class="cbp-l-caption-title"><i class="icon-magnifying-glass size-1x"></i></div> 
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
              <% end %>
            </div>   
        </div>
    </div>
</div>
<!-- End Portfolio --> 
